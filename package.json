{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "JP Sio <sio.jeanpaul@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node -r esm src/index.js",
    "lint": "yarn run server:lint; yarn run client:lint",
    "server:dev": "env-cmd -f ./config/dev.env nodemon -r esm --ignore client/ src/index.js",
    "server:test": "env-cmd -f ./config/test.env jest --runInBand src/**",
    "server:lint": "eslint '**/*.js' --ignore-pattern /client/",
    "client:dev": "cd client && yarn start",
    "client:test": "cd client && yarn test",
    "client:lint": "cd client && eslint 'src/**/*.js'",
    "dev": "concurrently --kill-others \"yarn run server:dev\" \"yarn run client:dev\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".js": "jest-esm-transformer"
    }
  },
  "dependencies": {
    "esm": "3.2.25",
    "express": "4.17.1",
    "mongodb": "3.3.3",
    "mongoose": "5.7.7"
  },
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "concurrently": "5.0.0",
    "env-cmd": "10.0.1",
    "eslint": "6.6.0",
    "eslint-plugin-react": "7.16.0",
    "husky": ">=1",
    "jest": "24.9.0",
    "jest-esm-transformer": "1.0.0",
    "lint-staged": ">=8",
    "nodemon": "1.19.4",
    "prettier": "1.18.2",
    "supertest": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/client/**/*.{js}": [
      "prettier --write",
      "eslint --fix src/client/",
      "git add"
    ],
    "src/**/*.{js}": [
      "prettier --write",
      "eslint --fix src/",
      "git add"
    ]
  }
}
